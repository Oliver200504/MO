@model MO.Models.Usuario

<div class="edit-container">
    <h2 class="edit-title">Editar Perfil</h2>

    <form method="post" asp-action="Editar">
        <div class="form-group">
            <input asp-for="Nombre" placeholder=" " />
            <label>Nombre:</label>
        </div>

        <div class="form-group">
            <input asp-for="Username" placeholder=" " />
            <label>Usuario:</label>
        </div>

        <div class="form-group">
            <input asp-for="Correo" placeholder=" " />
            <label>Correo:</label>
        </div>

        <div class="form-group">
            <input asp-for="Contrasena" type="password" placeholder=" " />
            <label>Contraseña:</label>
        </div>

        <button type="submit" class="btn-save">Guardar cambios</button>
    </form>

    <a class="btn-back" href="/Usuario/Perfil">⬅ Volver al perfil</a>
</div>

<style>
    body.trivia {
        background: linear-gradient(135deg, #4b0082, #8a2be2);
        font-family: 'Roboto', sans-serif;
        font-weight: 700;
        color: #fff;
    }

    .edit-container {
        max-width: 400px;
        margin: 30px auto;
        padding: 35px 25px;
        background: linear-gradient(135deg, #1a1a2e, #101540);
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .edit-title {
        background: linear-gradient(45deg, #8a2be2, #2575fc);
        color: #fff;
        padding: 6px 18px;
        border-radius: 12px;
        font-size: 2rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 25px;
    }

    /* Formulario */
    .edit-container form {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    /* Campos y labels alineados */
    .form-group {
        position: relative;
        display: flex;
        flex-direction: column-reverse;
    }

        .form-group input {
            padding: 12px 15px;
            border-radius: 12px;
            border: none;
            background: #fff; /* input blanco */
            color: #000; /* texto negro */
            font-size: 1rem;
            font-weight: 700;
            outline: none;
            transition: all 0.3s ease;
        }

            .form-group input:focus {
                background: #f0f0f0;
            }

        /* Labels animados al escribir o hover */
        .form-group label {
            font-size: 1.2rem;
            font-weight: 700;
            color: #2575fc; /* azul claro */
            margin-bottom: 6px;
            transition: all 0.3s ease;
        }

        .form-group input:hover + label,
        .form-group input:focus + label,
        .form-group input:not(:placeholder-shown) + label {
            color: #4fc3f7; /* azul más brillante al pasar o escribir */
        }

    /* Botón degradado */
    .btn-save {
        padding: 12px;
        border-radius: 15px;
        font-weight: 900;
        font-size: 1.1rem;
        border: none;
        color: #fff;
        background: linear-gradient(145deg, #8a2be2, #ff6a95);
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            background: linear-gradient(30deg, #ff6a957, #9b30ff);
        }

    /* Botón volver */
    .btn-back {
        display: inline-block;
        margin-top: 15px;
        text-decoration: none;
        font-weight: 700;
        color: #fff;
        padding: 8px 16px;
        border-radius: 12px;
        background: linear-gradient(45deg, #6a11cb, #2575fc);
        transition: all 0.3s ease;
    }

        .btn-back:hover {
            transform: translateY(-2px);
          
            background: linear-gradient(45deg, #4fc3f7, #9b30ff);
        }

    /* Responsive */
    @@media (max-width: 480px) {
        .edit-container

    {
        margin: 20px 15px;
        padding: 30px 20px;
    }

    .edit-title {
        font-size: 1.8rem;
        padding: 5px 15px;
    }

    .form-group input {
        font-size: 0.95rem;
    }

    .btn-save, .btn-back {
        font-size: 1rem;
        padding: 10px;
    }

    }
</style>
