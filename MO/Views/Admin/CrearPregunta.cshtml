@{
    ViewBag.Title = "Crear Pregunta";
    var categorias = ViewBag.Categorias as List<(int Id, string Nombre)>;
}
<a onclick="history.back()" class="btn btn-secondary">⬅ Regresar</a>

<h2>Crear Pregunta</h2>

<form method="post" asp-action="CrearPregunta">
    <div class="form-group">
        <label>Texto de la pregunta</label>
        <input type="text" name="textoPregunta" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Categoría</label>
        <select name="id_categoria" class="form-control" required>
            @foreach (var c in categorias)
            {
                <option value="@c.Id">@c.Nombre</option>
            }
        </select>
    </div>

    <h4>Respuestas</h4>
    
    <input type="text" name="respuestas" class="form-control mt-1" placeholder="Respuesta 1" required />
    <input type="text" name="respuestas" class="form-control mt-1" placeholder="Respuesta 2" required />
    <input type="text" name="respuestas" class="form-control mt-1" placeholder="Respuesta 3" required />
    <input type="text" name="respuestas" class="form-control mt-1" placeholder="Respuesta 4" required />

    <div class="form-group mt-2">
        <label>Índice de la respuesta correcta (0-3)</label>
        <input type="number" name="correcta" min="0" max="3" class="form-control" value="0" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
</form>
